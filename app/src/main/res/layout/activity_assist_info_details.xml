<?xml version="1.0" encoding="utf-8"?>
<com.kehui.www.testapp.ui.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_assist_list"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_heightPercent="10%">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/iv_assist_list_text" />
    </LinearLayout>

    <com.kehui.www.testapp.ui.PercentLinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="2.6%"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/base_dimen_50dp"
            android:layout_marginEnd="@dimen/base_dimen_50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/base_dimen_10dp"
                android:layout_marginEnd="@dimen/base_dimen_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_test_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_assist_no_reply"
                        android:drawablePadding="5dp"
                        android:text="@string/test_time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_colon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_test_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:text="2018-2-5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_test_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/ic_assist_no_reply"
                        android:drawablePadding="5dp"
                        android:text="@string/test_name2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_colon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_test_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="李明"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />
                </LinearLayout>
            </LinearLayout>

            <com.fang.dashview.DashView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/blue4"
                app:lineHeight="0.5dp"
                app:lineWidth="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/base_dimen_10dp"
                android:layout_marginEnd="@dimen/base_dimen_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_test_position_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_assist_no_reply"
                    android:drawablePadding="5dp"
                    android:text="@string/test_position"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />

                <TextView
                    android:id="@+id/tv_colon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />

                <TextView
                    android:id="@+id/tv_test_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="山东省淄博市高新区政通路135号"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />
            </LinearLayout>

            <com.fang.dashview.DashView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/blue4"
                app:lineHeight="0.5dp"
                app:lineWidth="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/base_dimen_10dp"
                android:layout_marginEnd="@dimen/base_dimen_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cable_length_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_assist_no_reply"
                        android:drawablePadding="5dp"
                        android:text="@string/cable_length"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_colon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_cable_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="2356"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_cable_length_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:text="m"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/base_dimen_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cable_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_assist_no_reply"
                        android:drawablePadding="5dp"
                        android:text="@string/cable_type2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_colon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_cable_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="110"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_cable_type_kv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:text="kV"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/base_dimen_16sp" />
                </LinearLayout>
            </LinearLayout>

            <com.fang.dashview.DashView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/blue4"
                app:lineHeight="0.5dp"
                app:lineWidth="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/base_dimen_10dp"
                android:layout_marginEnd="@dimen/base_dimen_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_fault_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/ic_assist_no_reply"
                        android:drawablePadding="5dp"
                        android:text="@string/fault_type"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_colon6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_fault_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="高阻"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_fault_length_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/ic_assist_no_reply"
                        android:drawablePadding="5dp"
                        android:text="@string/fault_length"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_colon7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_fault_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="100"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_fault_length_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:text="m"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/base_dimen_16sp" />
                </LinearLayout>
            </LinearLayout>

            <com.fang.dashview.DashView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/blue4"
                app:lineHeight="0.5dp"
                app:lineWidth="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/base_dimen_10dp"
                android:layout_marginEnd="@dimen/base_dimen_10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_short_note_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/ic_assist_no_reply"
                    android:drawablePadding="5dp"
                    android:text="@string/short_note_info"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />

                <TextView
                    android:id="@+id/tv_colon8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" : "
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />

                <TextView
                    android:id="@+id/tv_short_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="修路致使损伤"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />
            </LinearLayout>

            <com.fang.dashview.DashView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/blue4"
                app:lineHeight="0.5dp"
                app:lineWidth="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/base_dimen_10dp"
                android:layout_marginEnd="@dimen/base_dimen_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/ic_assist_no_reply"
                        android:drawablePadding="5dp"
                        android:text="@string/report_status"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_report_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="未上报"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/ic_assist_no_reply"
                        android:drawablePadding="5dp"
                        android:text="@string/reply_status"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />

                    <TextView
                        android:id="@+id/tv_reply_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="未回复"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_16sp" />
                </LinearLayout>
            </LinearLayout>

            <com.fang.dashview.DashView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/blue4"
                app:lineHeight="0.5dp"
                app:lineWidth="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/base_dimen_10dp"
                android:layout_marginEnd="@dimen/base_dimen_10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reply_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/ic_assist_no_reply"
                    android:drawablePadding="5dp"
                    android:text="@string/reply_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />

                <TextView
                    android:id="@+id/tv_colon9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" : "
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />

                <TextView
                    android:id="@+id/tv_reply_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="未检测到故障，请继续检测！"
                    android:textColor="@color/green"
                    android:textSize="@dimen/base_dimen_16sp" />
            </LinearLayout>

            <com.fang.dashview.DashView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/blue4"
                app:lineHeight="0.5dp"
                app:lineWidth="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="2.6%"></LinearLayout>
    </com.kehui.www.testapp.ui.PercentLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="end"
        android:padding="@dimen/base_dimen_5dp"
        app:layout_heightPercent="12%">

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_dimen_20dp"
            android:background="@drawable/btn_assist_selector"
            android:drawableStart="@drawable/ic_initate_assistance_commit"
            android:drawablePadding="5dp"
            android:paddingStart="@dimen/base_dimen_15dp"
            android:paddingEnd="@dimen/base_dimen_20dp"
            android:text="@string/commit"
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="@dimen/base_dimen_14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_dimen_50dp"
            android:background="@drawable/btn_assist_selector"
            android:drawableStart="@drawable/ic_assist_list_back"
            android:drawablePadding="5dp"
            android:paddingStart="@dimen/base_dimen_15dp"
            android:paddingEnd="@dimen/base_dimen_20dp"
            android:text="@string/back2"
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="@dimen/base_dimen_14sp" />
    </LinearLayout>

</com.kehui.www.testapp.ui.PercentLinearLayout>
