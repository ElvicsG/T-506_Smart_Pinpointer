<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_expert">

    <com.kehui.www.testapp.ui.PercentLinearLayout
        android:id="@+id/ll_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        app:layout_widthPercent="16%">

        <com.kehui.www.testapp.ui.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_heightPercent="13%">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/ic_synchronize_light"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/synchronize_light"
                android:textColor="@color/blue7"
                android:visibility="gone"
                android:textSize="@dimen/base_dimen_14sp" />

            <ImageView
                android:id="@+id/iv_synchronize_status"
                android:layout_width="@dimen/base_dimen_50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textColor="@color/blue7"
                    android:textSize="@dimen/base_dimen_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/blue7"
                    android:textSize="@dimen/base_dimen_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2525Oe"
                    android:textColor="@color/blue7"
                    android:textSize="@dimen/base_dimen_14sp" />
            </LinearLayout>
        </com.kehui.www.testapp.ui.PercentLinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_silence"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_btn_expert"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/il_silence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="@dimen/base_dimen_55dp"
                    android:minWidth="@dimen/base_dimen_55dp"
                    android:text="@string/mute"
                    android:textColor="@color/blue3"
                    android:textSize="@dimen/base_dimen_13sp" />

                <ImageView
                    android:id="@+id/iv_silence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_open_voice" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pause"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_btn_expert"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="@dimen/base_dimen_55dp"
                    android:minWidth="@dimen/base_dimen_55dp"
                    android:text="@string/pause"
                    android:textColor="@color/blue3"
                    android:textSize="@dimen/base_dimen_13sp" />

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_memory"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_btn_expert"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="@dimen/base_dimen_55dp"
                    android:minWidth="@dimen/base_dimen_55dp"
                    android:text="@string/memory"
                    android:textColor="@color/blue3"
                    android:textSize="@dimen/base_dimen_13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_memory" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_compare"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_btn_expert"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/compare"
                    android:maxWidth="@dimen/base_dimen_55dp"
                    android:minWidth="@dimen/base_dimen_55dp"
                    android:textColor="@color/blue3"
                    android:textSize="@dimen/base_dimen_13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_compare" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_filter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_btn_expert"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:maxWidth="@dimen/base_dimen_55dp"
                    android:minWidth="@dimen/base_dimen_55dp"
                    android:text="@string/filter"
                    android:textColor="@color/blue3"
                    android:textSize="@dimen/base_dimen_13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_filter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_assist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_btn_expert"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/assist"
                    android:maxWidth="@dimen/base_dimen_55dp"
                    android:minWidth="@dimen/base_dimen_55dp"
                    android:textColor="@color/blue3"
                    android:textSize="@dimen/base_dimen_13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_assist" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_settings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_btn_expert"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/setting"
                    android:maxWidth="@dimen/base_dimen_55dp"
                    android:minWidth="@dimen/base_dimen_55dp"
                    android:textColor="@color/blue3"
                    android:textSize="@dimen/base_dimen_13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_setting" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_mode">

                    <ImageView
                        android:id="@+id/iv_mode_u"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_expert" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bg_line" />

                    <TextView
                        android:id="@+id/tv_mode_u"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/expert_mode"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue8"
                        android:textSize="@dimen/base_dimen_12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.kehui.www.testapp.ui.PercentLinearLayout>

    <com.kehui.www.testapp.ui.PercentLinearLayout
        android:id="@+id/rl_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/ll_right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_expert_notice"
            android:gravity="center"
            app:layout_heightPercent="13%">

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/message_notice_5"
                android:textColor="@color/blue9"
                android:textSize="@dimen/base_dimen_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_expert_gain"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_magnetic_field"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/magnetic_field"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_15sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />

                <SeekBar
                    android:id="@+id/seekbar_cichang"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:thumb="@drawable/seek_bar_thumb3"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/tv_cichang_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/base_dimen_20dp"
            android:layout_marginEnd="@dimen/base_dimen_20dp"
            android:layout_weight="2">

            <com.kehui.www.testapp.ui.SparkView.SparkView
                android:id="@+id/linechart_cichang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/base_dimen_10dp"
                app:spark_lineColor="@color/blue3" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                android:text=""
                android:textColor="@color/blue3"
                android:textSize="@dimen/base_dimen_16sp"
                tools:text="@string/left"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_expert_gain"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_voice"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/shengyin_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_15sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />

                <SeekBar
                    android:id="@+id/seekbar_shengyin"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:thumb="@drawable/seek_bar_thumb3"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/tv_shengyin_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_16sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/base_dimen_20dp"
            android:layout_marginEnd="@dimen/base_dimen_20dp"
            android:layout_weight="2">

            <com.kehui.www.testapp.ui.SparkView.SparkView
                android:id="@+id/linechart_shengyin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/base_dimen_10dp"
                app:spark_lineColor="@color/blue3"
                app:spark_scrubEnabled="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Sound_field_delay"
                    android:textColor="@color/blue3"
                    android:textSize="@dimen/base_dimen_16sp" />

                <TextView
                    android:id="@+id/tv_yan_shi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5ms"
                    android:textColor="@color/blue3"
                    android:textSize="@dimen/base_dimen_16sp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="1%"></LinearLayout>

    </com.kehui.www.testapp.ui.PercentLinearLayout>
</android.support.percent.PercentRelativeLayout>
