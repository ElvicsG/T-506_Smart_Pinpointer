<?xml version="1.0" encoding="utf-8"?>
<com.kehui.www.testapp.ui.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_setting"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_heightPercent="10%">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/iv_assist_list_text" />
    </LinearLayout>

    <com.kehui.www.testapp.ui.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="2.6%"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/base_dimen_55dp"
                android:layout_weight="2"
                android:background="@drawable/bg_setting_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/base_dimen_50dp"
                    android:paddingEnd="@dimen/base_dimen_50dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:gravity="center">

                        <RadioGroup
                            android:id="@+id/rg_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rb_en"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/base_dimen_20dp"
                                android:button="@drawable/rb_button_style"
                                android:drawablePadding="10dp"
                                android:padding="@dimen/base_dimen_10dp"
                                android:text="@string/en"
                                android:textColor="@color/white"
                                android:textSize="@dimen/base_dimen_16sp" />

                            <com.fang.dashview.DashView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                app:dashOrientation="0"
                                app:dashWidth="2dp"
                                app:lineColor="@color/blue4"
                                app:lineHeight="0.5dp"
                                app:lineWidth="5dp" />

                            <RadioButton
                                android:id="@+id/rb_de"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/base_dimen_20dp"
                                android:button="@drawable/rb_button_style"
                                android:drawablePadding="10dp"
                                android:padding="@dimen/base_dimen_10dp"
                                android:text="@string/de"
                                android:textColor="@color/white"
                                android:textSize="@dimen/base_dimen_16sp" />

                            <com.fang.dashview.DashView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                app:dashOrientation="0"
                                app:dashWidth="2dp"
                                app:lineColor="@color/blue4"
                                app:lineHeight="0.5dp"
                                app:lineWidth="5dp" />

                            <RadioButton
                                android:id="@+id/rb_spain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/base_dimen_20dp"
                                android:button="@drawable/rb_button_style"
                                android:drawablePadding="10dp"
                                android:padding="@dimen/base_dimen_10dp"
                                android:text="@string/es"
                                android:textColor="@color/white"
                                android:textSize="@dimen/base_dimen_16sp" />

                            <com.fang.dashview.DashView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                app:dashOrientation="0"
                                app:dashWidth="2dp"
                                app:lineColor="@color/blue4"
                                app:lineHeight="0.5dp"
                                app:lineWidth="5dp" />

                            <RadioButton
                                android:id="@+id/rb_fr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/base_dimen_20dp"
                                android:button="@drawable/rb_button_style"
                                android:drawablePadding="10dp"
                                android:padding="@dimen/base_dimen_10dp"
                                android:text="@string/fr"
                                android:textColor="@color/white"
                                android:textSize="@dimen/base_dimen_16sp" />

                            <com.fang.dashview.DashView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                app:dashOrientation="0"
                                app:dashWidth="2dp"
                                app:lineColor="@color/blue4"
                                app:lineHeight="0.5dp"
                                app:lineWidth="5dp" />

                            <RadioButton
                                android:id="@+id/rb_zh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/base_dimen_20dp"
                                android:button="@drawable/rb_button_style"
                                android:drawablePadding="10dp"
                                android:padding="@dimen/base_dimen_10dp"
                                android:text="@string/zh"
                                android:textColor="@color/white"
                                android:textSize="@dimen/base_dimen_16sp" />

                            <com.fang.dashview.DashView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                app:dashOrientation="0"
                                app:dashWidth="2dp"
                                app:lineColor="@color/blue4"
                                app:lineHeight="0.5dp"
                                app:lineWidth="5dp" />

                            <RadioButton
                                android:id="@+id/rb_follow_sys"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/base_dimen_20dp"
                                android:button="@drawable/rb_button_style"
                                android:drawablePadding="10dp"
                                android:padding="@dimen/base_dimen_10dp"
                                android:text="@string/follow_sys"
                                android:textColor="@color/white"
                                android:textSize="@dimen/base_dimen_16sp" />

                            <com.fang.dashview.DashView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                app:dashOrientation="0"
                                app:dashWidth="2dp"
                                app:lineColor="@color/blue4"
                                app:lineHeight="0.5dp"
                                app:lineWidth="5dp" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btn_switch"
                            android:layout_width="@dimen/base_dimen_150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/base_dimen_5dp"
                            android:layout_marginBottom="@dimen/base_dimen_10dp"
                            android:background="@drawable/bg_round_border_2"
                            android:text="@string/switch_text"
                            android:textColor="@color/white"
                            android:textSize="@dimen/base_dimen_15sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_soft_upgrade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/base_dimen_25dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_download_300" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/base_dimen_20dp"
                        android:layout_marginTop="@dimen/base_dimen_150dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_current_version_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_assist_no_reply"
                            android:drawablePadding="@dimen/base_dimen_20dp"
                            android:text="@string/current_version"
                            android:textColor="@color/white"
                            android:textSize="@dimen/base_dimen_18sp" />

                        <TextView
                            android:id="@+id/tv_colon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:textColor="@color/white"
                            android:textSize="@dimen/base_dimen_18sp" />

                        <TextView
                            android:id="@+id/tv_version_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="V2.01.001"
                            android:textColor="@color/white"
                            android:textSize="@dimen/base_dimen_18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_software_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_container"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:drawableStart="@drawable/ic_assist_no_reply"
                        android:drawablePadding="20dp"
                        android:text="@string/software_new"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_18sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_update_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_round_border_2"
                        android:paddingTop="@dimen/base_dimen_10dp"
                        android:paddingBottom="@dimen/base_dimen_10dp"
                        android:paddingStart="@dimen/base_dimen_25dp"
                        android:paddingEnd="@dimen/base_dimen_25dp"
                        android:text="@string/check_updates"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_15sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/base_dimen_25dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_setting_abou_us" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_15dp"
                        android:text="@string/company"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_18sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_5dp"
                        android:text="@string/company_address"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_18sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_5dp"
                        android:text="@string/company_phone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_dimen_40dp"
                    android:background="@drawable/bg_btn_setting"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_language" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/base_dimen_65dp"
                        android:minWidth="@dimen/base_dimen_65dp"
                        android:text="@string/language2"
                        android:gravity="center"
                        android:textSize="@dimen/base_dimen_13sp"
                        android:textColor="@color/blue3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_software_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_dimen_15dp"
                    android:background="@drawable/bg_btn_setting"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_upgrade" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/base_dimen_65dp"
                        android:minWidth="@dimen/base_dimen_65dp"
                        android:text="@string/software_upgrade"
                        android:gravity="center"
                        android:textSize="@dimen/base_dimen_13sp"
                        android:textColor="@color/blue3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_dimen_15dp"
                    android:background="@drawable/bg_btn_setting"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_about_us" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/base_dimen_65dp"
                        android:minWidth="@dimen/base_dimen_65dp"
                        android:text="@string/about_us"
                        android:gravity="center"
                        android:textSize="@dimen/base_dimen_13sp"
                        android:textColor="@color/blue3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_dimen_15dp"
                    android:background="@drawable/bg_btn_setting"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/base_dimen_65dp"
                        android:minWidth="@dimen/base_dimen_65dp"
                        android:text="@string/back2"
                        android:gravity="center"
                        android:textSize="@dimen/base_dimen_13sp"
                        android:textColor="@color/blue3" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="2.6%"></LinearLayout>
    </com.kehui.www.testapp.ui.PercentLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"></LinearLayout>

</com.kehui.www.testapp.ui.PercentLinearLayout>
